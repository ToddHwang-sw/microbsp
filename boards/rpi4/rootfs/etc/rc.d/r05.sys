#!/bin/sh

ASK='xcfgcli.sh get '

## check wan interface name 
WANNAME=`$ASK wan/name`
[ "$WANNAME" != "eth0" ] || exit 1

case $1 in
	"start")
		echo "[WLAN] Loading all WLAN modules..."
		modprobe 8192eu
		modprobe 88x2bu

		/etc/scripts/wlan_sta.sh start
		;;
	"stop")
		echo "[WLAN] Unloading all WLAN modules..."
		/etc/scripts/wlan_sta.sh stop

		rmmod 8812bu
		rmmod 8192eu
		;;
	"*")
		;;
esac
